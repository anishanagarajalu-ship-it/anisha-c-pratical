#include <stdio.h>
int main() {
    float m1, m2, m3, average;
// Input marks
    printf("Enter marks of subject 1: ");
    scanf("%f", &m1);
printf("Enter marks of subject 2: ");
    scanf("%f", &m2);
printf("Enter marks of subject 3: ");
    scanf("%f", &m3);
// Calculate average
    average = (m1 + m2 + m3) / 3;
  // Display result
    printf("\nAverage Marks = %.2f\n", average);
  return 0;
}
o/p
Enter marks of subject 1: 80
Enter marks of subject 2: 75
Enter marks of subject 3: 85

Average Marks = 80.00
