#include <stdio.h>

int main() {
    float rainfall[12];  // Array to store rainfall for 12 months
    float total = 0, average;
    int i;

    // Input rainfall for each month
    for(i = 0; i < 12; i++) {
        printf("Enter rainfall for month %d (in mm): ", i + 1);
        scanf("%f", &rainfall[i]);
        total += rainfall[i];  // Add to total
    }

    // Calculate average
    average = total / 12;

    // Display results
    printf("\nTotal rainfall = %.2f mm\n", total);
    printf("Average monthly rainfall = %.2f mm\n", average);

    return 0;
}
