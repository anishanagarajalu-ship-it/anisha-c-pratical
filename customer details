#include <stdio.h>
#include <string.h>

// Defining the structure
struct Customer {
    int id;
    char name[50];
    char mobile[15];
};

int main() {
    int n, searchId, found = 0;

    printf("Enter the number of customers: ");
    scanf("%d", &n);

    struct Customer c[n]; // Array of structures

    // Inputting details
    for (int i = 0; i < n; i++) {
        printf("\nEnter details for Customer %d\n", i + 1);
        printf("Customer ID: ");
        scanf("%d", &c[i].id);
        printf("Name: ");
        scanf(" %[^\n]s", c[i].name); // Reads string with spaces
        printf("Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    // Searching process
    printf("\n--- Search Customer ---\n");
    printf("Enter Customer ID to search: ");
    scanf("%d", &searchId);

    for (int i = 0; i < n; i++) {
        if (c[i].id == searchId) {
            printf("\nCustomer Found!");
            printf("\nID: %d\nName: %s\nMobile: %s\n", c[i].id, c[i].name, c[i].mobile);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("\nCustomer with ID %d not found.\n", searchId);
    }

    return 0;
}
