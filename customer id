#include <stdio.h>

// Structure definition
struct Customer {
    int id;
    char name[50];
    char mobile[15];
};

int main() {
    struct Customer cust[50];
    int n, i, searchId, found = 0;

    // Input number of customers
    printf("Enter number of customers: ");
    scanf("%d", &n);

    // Input customer details
    for (i = 0; i < n; i++) {
        printf("\nCustomer %d Details\n", i + 1);

        printf("Customer ID: ");
        scanf("%d", &cust[i].id);

        printf("Name: ");
        scanf("%s", cust[i].name);

        printf("Mobile Number: ");
        scanf("%s", cust[i].mobile);
    }

    // Search customer by ID
    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for (i = 0; i < n; i++) {
        if (cust[i].id == searchId) {
            printf("\nCustomer Found!\n");
            printf("Customer ID   : %d\n", cust[i].id);
            printf("Name          : %s\n", cust[i].name);
            printf("Mobile Number : %s\n", cust[i].mobile);
            found = 1;
            break;
        }
    }

    if (found == 0) {
        printf("\nCustomer not found.\n");
    }

    return 0;
}
