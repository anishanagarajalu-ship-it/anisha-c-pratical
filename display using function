#include <stdio.h>

// function to display menu
void displayMenu()
{
    printf("----- MENU -----\n");
    printf("1. Add\n");
    printf("2. Subtract\n");
    printf("3. Multiply\n");
    printf("4. Exit\n");
}

int main()
{
    int choice;

    displayMenu();   // function call

    printf("Enter your choice: ");
    scanf("%d", &choice);

    printf("You selected option %d\n", choice);

    return 0;
}
