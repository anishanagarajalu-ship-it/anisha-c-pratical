#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char mobile[20];
    int i, valid = 1;

    printf("Enter mobile number: ");
    scanf("%s", mobile);

    // Check length
    if (strlen(mobile) != 10) {
        valid = 0;
    } else {
        // Check digits
        for (i = 0; i < 10; i++) {
            if (!isdigit(mobile[i])) {
                valid = 0;
                break;
            }
        }
    }

    if (valid)
        printf("Valid mobile number");
    else
        printf("Invalid mobile number");

    return 0;

}
o/p
Enter mobile number: 9876543210
Valid mobile number
