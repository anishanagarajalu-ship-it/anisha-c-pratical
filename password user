#include <stdio.h>
#include <string.h>

// Defining the structure for user credentials
struct User {
    char username[30];
    char password[30];
};

int main() {
    // Setting up the authorized account
    struct User admin = {"admin_user", "pass123"};
    
    // Variables to store user input
    char inputUser[30];
    char inputPass[30];

    printf("--- System Login ---\n");

    // Input Username
    printf("Enter Username: ");
    scanf("%s", inputUser);

    // Input Password
    printf("Enter Password: ");
    scanf("%s", inputPass);

    // Verification logic using strcmp (string compare)
    // strcmp returns 0 if both strings are identical
    if (strcmp(inputUser, admin.username) == 0 && strcmp(inputPass, admin.password) == 0) {
        printf("\nLogin Successful! Welcome, %s.\n", admin.username);
    } else {
        printf("\nAccess Denied: Invalid username or password.\n");
    }

    return 0;
}
