#include <stdio.h>

// structure definition
struct Mobile
{
    int mobileId;
    char brand[20];
    char model[20];
    float price;
};

int main()
{
    struct Mobile m;

    // input mobile details
    printf("Enter Mobile ID: ");
    scanf("%d", &m.mobileId);

    printf("Enter Brand: ");
    scanf("%s", m.brand);

    printf("Enter Model: ");
    scanf("%s", m.model);

    printf("Enter Price: ");
    scanf("%f", &m.price);

    // display mobile details
    printf("\n--- Mobile Details ---\n");
    printf("Mobile ID : %d\n", m.mobileId);
    printf("Brand     : %s\n", m.brand);
    printf("Model     : %s\n", m.model);
    printf("Price     : %.2f\n", m.price);

    return 0;
}
