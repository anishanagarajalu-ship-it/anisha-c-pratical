#include <stdio.h>
// function to check prime number
int isPrime(int num)
{
    int i;

    if (num <= 1)
        return 0;

    for (i = 2; i <= num / 2; i++)
    {
        if (num % i == 0)
            return 0;
    }
    return 1;
}
int main()
{
    int number;
 printf("Enter a number: ");
    scanf("%d", &number);
if (isPrime(number))
        printf("%d is a Prime Number\n", number);
    else
        printf("%d is Not a Prime Number\n", number);
  return 0;
}
o/p
Enter a number: 7
7 is a Prime Number
