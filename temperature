#include <stdio.h>

int main() {
    float temp[7];  // Array to store temperatures for 7 days
    float highest, lowest;
    int i;

    // Input temperatures
    for(i = 0; i < 7; i++) {
        printf("Enter temperature for day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    // Initialize highest and lowest with first day's temperature
    highest = lowest = temp[0];

    // Find highest and lowest
    for(i = 1; i < 7; i++) {
        if(temp[i] > highest) {
            highest = temp[i];
        }
        if(temp[i] < lowest) {
            lowest = temp[i];
        }
    }

    // Display results
    printf("\nHighest temperature in the week = %.2f\n", highest);
    printf("Lowest temperature in the week = %.2f\n", lowest);

    return 0;
}
